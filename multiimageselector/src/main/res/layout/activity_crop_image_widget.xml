<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/sec_default_circle_indicator_fill_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/sns_top_layout"
        style="@style/top_bar_style" >

        <ImageView
            android:id="@+id/btn_back"
            style="@style/top_bar_black" />

        <ImageView
            android:id="@+id/crop_save"
            style="@style/btn_sure" />
    </RelativeLayout>

    <lme.net.multiimageselector.view.CropImageView
        android:id="@+id/cropImg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/black"
        android:layout_below="@+id/sns_top_layout" />

</RelativeLayout>