<resources>
<!-- Application theme. -->
    <!-- 主界面top条样式 -->
    <style name="top_bar_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:background">@color/sec_default_circle_indicator_fill_color</item>
    </style>
    <!-- 社区返回按钮样式 -->
    <style name="top_bar_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:src">@drawable/sns_btn_back_efc</item>
        <item name="android:background">@null</item>
        <item name="android:contentDescription">@null</item>
    </style>
    <!-- 社区标题的样式 -->
    <style name="sns_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center|center_vertical</item>
    </style>
    <!-- 确定按钮样色 -->
    <style name="btn_sure">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:src">@drawable/sns_topic_done_selector</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
